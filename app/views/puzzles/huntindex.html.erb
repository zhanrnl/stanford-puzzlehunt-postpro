<h1>Stanford Puzzle Hunt</h1>
<p>Logged in as team:&emsp;<%= session[:team_name] %>&emsp;<a href='/logout'>Logout</a></p>
<p><%= link_to "Ask a Question to HQ", ask_question_url %></p>
<h2>Puzzles</h2>
<table>
<% @puzzles.each do |p| %>
<tr>
  <td><%= p.puzzle_name %></td>
  <td>
    <% if @unlocked_puzzles.include? p %>
    <%= link_to "link to puzzle", puzzle_url_name(p) %>
    <% else %>
    <b>locked</b>
    <% end %>
  </td>
  <td>
    <% if @solved_puzzles.include? p %>
    <b>solved</b>
    <% end %>
  </td>
</tr>
<% end %>
</table>