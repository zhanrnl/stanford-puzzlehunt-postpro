<h2>Team scoreboard</h2>
<table>
  <tr>
    <th>Team name</th>
    <th>Internal name</th>
    <th>Total number of puzzles solved</th>
    <th>Number of non-meta puzzles solved</th>
    <th>Number of meta puzzles solved</th>
    <th>Most recent puzzle solved</th>
    <th>Time of most recent solve</th>
    <th>Points</th>
  <tr>
  <% @teams.each do |team| %>
  <tr class="scoreboard">
    <td><%= link_to team.team_name, team_url(team.id) %></td>
    <td><%= link_to team.internal_name, team_url(team.id) %></td>
    <td><%= team.num_total_puzzles_solved %></td>
    <td><%= team.num_nonmeta_puzzles_solved %></td>
    <td><%= team.num_meta_puzzles_solved %></td>
    <td><%= n, t = team.most_recent_puzzle_solved; n %></td>
    <td><%= t %></td>
    <td><%= team.points %></td>
  </tr>
  <% end %>
</table>