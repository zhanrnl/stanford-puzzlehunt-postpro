<% title "Login" %>

<h1>Login</h1>
<% if alert == :wrong %>
  <p>Wrong username or password, try again.</p>
<% elsif alert == :logout %>
  <p>Successfully logged out.</p>
<% end %>
<%= form_tag '/login' do -%>
  <p><%= label_tag :internal_name, 'Team username:' %> <%= text_field_tag :internal_name %></p>
  <p><%= label_tag :clear_pass, 'Password:' %> <%= password_field_tag :clear_pass %></p>
  <div><%= submit_tag 'Login' %></div>
<% end -%>
